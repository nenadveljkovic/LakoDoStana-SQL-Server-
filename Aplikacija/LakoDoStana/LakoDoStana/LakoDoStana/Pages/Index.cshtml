@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Landing Page - Start Bootstrap Theme</title>

        <!-- Bootstrap core CSS -->
        <link href="~/ThemaIndex/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

        <!-- Custom fonts for this template -->
        <link href="~/ThemaIndex/vendor/fontawesome-free/css/all.css" rel="stylesheet" />
        <link href="~/ThemaIndex/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

        <!-- Custom styles for this template -->
        <link href="~/ThemaIndex/css/landing-page.min.css" rel="stylesheet" />

    </head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand" href="#">Lako do Stana</a>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <div class="navbar-nav ml-auto">
                    <a class="nav-link btn btn-secondary " asp-page="/Login">Uloguj se</a>
                    &nbsp;&nbsp;
                    <a class="nav-link btn btn-primary" asp-page="/Register" asp-route-adminid="@Model.ind">Registruj se</a>
                </div>
            </div>
        </div>
</nav>

    <!-- Masthead -->
    <header class="masthead text-white text-center" style="background-image: url('themaindex/img/wallpaper.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">DOBRODOŠLI!</h1>
                    <p class="lead mb-3">Najbolji portal za brzo pretraživanje stanova i za lako pronalaženje cimera!</p>
                </div>
            </div>
        </div>
    </header>

    <!-- Icons Grid -->
    <section class="features-icons bg-light text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="fas fa-user-circle m-auto"></i>
                        </div>
                        <h3>Oglašivač</h3>
                        <p class="lead mb-0">Ovaj tip korisnika može da postavlja oglase i komunicira sa ostalim korisnicima portala!</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <div class="features-icons-icon d-flex">
                            <i class="far fa-user-circle m-auto text-primary"></i>
                        </div>
                        <h3>Posetilac</h3>
                        <p class="lead mb-0">Tip korisnika koji je prvenstveno namenjen pregledavanju postavljenih oglasa!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Image Showcases -->
    <section class="showcase">
        <div class="container-fluid p-0">
            <div class="row no-gutters">

                <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('themaindex/img/index1.jpg');"></div>
                <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                    <h2>Prostranjenost</h2>
                    <p class="lead mb-0">Portal "Lako do stana" služi za lako i brzo pronalaženje stanova i cimera u bilo kom gradu u Srbiji.</p>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-lg-6 text-white showcase-img" style="background-image: url('themaindex/img/index2.jpg');"></div>
                <div class="col-lg-6 my-auto showcase-text">
                    <h2>Pregled informacija</h2>
                    <p class="lead mb-0">Portal "Lako do stana" takodje omogućavaju detaljan pregled informacija o stanovima postavljenim od strane drugih korisnika portala.</p>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('themaindex/img/index3.jpg');"></div>
                <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                    <h2>Dobra zaštita</h2>
                    <p class="lead mb-0">"Lako do stana" portal takodje garantuje vašu bezbednost prilikom pretraživanja stanova i traženju cimera kao i prilikom postavljivanja oglasa.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
                    <ul class="list-inline mb-2">
                        <li class="list-inline-item">
                            <a href="#">About</a>
                        </li>
                        <li class="list-inline-item">&sdot;</li>
                        <li class="list-inline-item">
                            <a href="#">Contact</a>
                        </li>
                        <li class="list-inline-item">&sdot;</li>
                        <li class="list-inline-item">
                            <a href="#">Terms of Use</a>
                        </li>
                        <li class="list-inline-item">&sdot;</li>
                        <li class="list-inline-item">
                            <a href="#">Privacy Policy</a>
                        </li>
                    </ul>
                    <p class="text-muted small mb-4 mb-lg-0">&copy; Lako do Stana Website 2020. All Rights Reserved.</p>
                </div>
                <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item mr-3">
                            <a href="#">
                                <i class="fab fa-facebook fa-2x fa-fw"></i>
                            </a>
                        </li>
                        <li class="list-inline-item mr-3">
                            <a href="#">
                                <i class="fab fa-twitter-square fa-2x fa-fw"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#">
                                <i class="fab fa-instagram fa-2x fa-fw"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/ThemaIndex/vendor/jquery/jquery.min.js"></script>
    <script src="~/ThemaIndex/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>